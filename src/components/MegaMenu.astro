<style lang="postcss">
    .megamenu{
        height: 3.5rem; 
        transition: background-color .2s ease;
        margin-top: 10px;
        position: fixed;
        left: 50%;
        transform: translateX(-50%);
        z-index: 20;
        background: rgba( 255, 255, 255, 0.1 );
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
        backdrop-filter: blur( 14.5px );
        -webkit-backdrop-filter: blur( 4.5px );
        border-radius: 50px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );

        

        .wrapper{
            height: 100%;
            width: 100%;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;

            .megamenu-brand{
              display:flex;
              justify-content: center;
              align-items:center;
              
              .megamenu-brand__icon{
                margin-right: 10px;
              }

            }

            nav{
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-top: 5px;

                .nav-links{
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    position:relative;

                    .nav-link{
                        
                        padding: 0 1rem;
                        transition: all 0.3s ease-in-out;
                        border-radius: 0.5rem;

                        a{
                          font-size: 1.1rem;
                          color:black;
                        }

                        &:hover{
                           color: var(--color-verse-500);

                           .menu-dropdown{
                            display: flex;
                           }
                        }

                        .menu-dropdown{
                          display:none;

                          &:hover{
                            display:flex;
                          }
                        }


                        .menu-dropdown-community{
                            position: absolute;
                            background: red;
                            padding: 20px;
                            transform: translate(-30%,8%);

                            /* From https://css.glass */
                            background-color: white;
                            border-radius: 16px;
                            box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
                            backdrop-filter: blur(8.9px);
                            -webkit-backdrop-filter: blur(8.9px);
                            border: 1px solid rgba(255, 255, 255, 0.3);
                            
                            .community-cover{
                              padding-right: 20px;
                              border-right: 1px solid gray;

                              .community-cover-img-box{
                                margin-top: 10px;
                                width: 100%;
                                border-radius: 20px;
                                overflow: hidden;

                                
                                  img{
                                    width:100%;
                                    transform: scale(1.5);
                                  }
                              }
                          }

                          .community-links{
                            padding-left: 20px;

                            li{
                              a{
                                font-size: 1.1rem;
                              }
                            }
                          }

                        }
                    }
                }
            }
        }
    }

</style>

