---
import sponsorTypes from "../data/sponsors.js";
import Layout from "../layouts/LayoutCustom.astro";
const title = "Our sponsors";
const description = "";
---

<Layout title={title} description={description}>
    <div class="contain">
        <div class="bg-brand-0">
            <div class="lg:py-24">
                <div class="space-y-8 sm:space-y-12">
                    <div class="space-y-5 sm:mx-auto sm:space-y-4 text-center">
                        <h2
                            class="text-3xl font-bold tracking-tight sm:text-5xl sm:tracking-tight text-verse-0"
                        >
                            Sponsors
                        </h2>
                        <p class="text-xl text-gray-500">
                            We're lucky to have sponsors support our community.
                            If you're interested in sponsoring us, please reach
                            out to the organizers <a
                                href="mailto:hello@frontend.mu">here</a
                            >
                        </p>
                    </div>

                    {
                        sponsorTypes.map((sponsorType) => (
                            <div>
                                <div class="space-y-5 sm:mx-auto  sm:space-y-4 ">
                                    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl sm:tracking-tight font-mono text-verse-0">
                                        {sponsorType.title}
                                    </h2>
                                    <p class="text-xl text-gray-500">
                                        {sponsorType.description}
                                    </p>
                                </div>
                                <ul
                                    role="list"
                                    class="mx-auto mt-6 grid grid-cols-1 gap-x-4 gap-y-2 sm:grid-cols-3 md:gap-x-6  lg:gap-x-8 lg:gap-y-12 xl:grid-cols-3"
                                >
                                    {sponsorType.sponsors.map(
                                        (sponsor, index) => (
                                            <li>
                                                <a
                                                    target="_blank"
                                                    href={sponsor.sponsorUrl}
                                                    class="mt-4 md:mt-0 relative rounded-xl flex justify-center items-center  flex-col gap-2 group bg-white p-6 shadow-md transition-all hover:shadow-lg border-t-8 border-solid border-blue-500"
                                                >
                                                    <img
                                                        v-if="sponsor.logo"
                                                        class="w-48 h-auto"
                                                        src={`/img/sponsors/${sponsor.logo}`}
                                                    />
                                                    <div v-else>
                                                        <span class="text-2xl font-bold">
                                                            {sponsor.name}
                                                        </span>
                                                    </div>
                                                    <p
                                                        v-if="sponsor.description"
                                                        class="text-gray-500 text-center"
                                                    >
                                                        {sponsor.description}
                                                    </p>
                                                </a>
                                            </li>
                                        )
                                    )}
                                </ul>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</Layout>
